# Unified KMS MCP Server Environment Variables

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=unified_kms

# Neo4j Configuration  
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Mem0 Configuration (Required)
MEM0_API_KEY=your_mem0_api_key_here
MEM0_ORG_ID=your_mem0_org_id

# Redis Configuration
REDIS_URI=redis://localhost:6379

# FACT Cache Configuration
FACT_L1_SIZE=104857600    # 100MB L1 cache
FACT_L2_TTL=1800000       # 30 minutes L2 TTL  
FACT_L3_TTL=3600000       # 1 hour L3 TTL

# Transport Configuration
# Options: stdio, http, dual
TRANSPORT_MODE=stdio

# HTTP Transport Configuration (required if TRANSPORT_MODE is http or dual)
HTTP_PORT=3001
HTTP_HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=*  # Use comma-separated for multiple origins: https://app1.com,https://app2.com
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
RATE_LIMIT_MAX=1000       # Max requests per window

# OAuth 2.1 Configuration (optional - for remote MCP with authentication)
OAUTH_ENABLED=false
OAUTH_ISSUER=https://auth.example.com
OAUTH_AUDIENCE=https://mcp.example.com
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# OAuth Endpoints (configure based on your authorization server)
OAUTH_JWKS_URI=https://auth.example.com/.well-known/jwks.json
OAUTH_AUTHORIZATION_ENDPOINT=https://auth.example.com/oauth/authorize
OAUTH_TOKEN_ENDPOINT=https://auth.example.com/oauth/token
OAUTH_TOKEN_INTROSPECTION_ENDPOINT=https://auth.example.com/oauth/introspect
OAUTH_USER_INFO_ENDPOINT=https://auth.example.com/oauth/userinfo

# OAuth Dynamic Client Registration (optional)
OAUTH_DYNAMIC_REGISTRATION=false
OAUTH_DYNAMIC_REGISTRATION_ENDPOINT=https://auth.example.com/oauth/register

# Development
NODE_ENV=development
